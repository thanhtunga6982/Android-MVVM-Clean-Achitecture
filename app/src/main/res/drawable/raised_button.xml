<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/semi_light_green"
    >

    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@color/colorAccent"/>
            <stroke
                android:width="0dp"
                android:color="@color/my_transparent"
                />
            <corners
                android:radius="@dimen/DefaultButtonRadius"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />
        </shape>
    </item>

    <item>
        <selector>

            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/grey"/>
                    <stroke
                        android:width="0dp"
                        android:color="@color/my_transparent"
                        />
                    <corners
                        android:radius="@dimen/DefaultButtonRadius"/>
                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp"
                        />
                </shape>
            </item>

            <item>
                <shape>
                    <solid android:color="@color/colorAccent"/>
                    <stroke
                        android:width="0dp"
                        android:color="@color/my_transparent"
                        />
                    <corners
                        android:radius="@dimen/DefaultButtonRadius"/>
                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp"
                        />
                </shape>
            </item>

        </selector>
    </item>

</ripple>
