<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ErrorTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:gravity">left</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextLink">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:background">@drawable/grey_selector</item>
    </style>

    <style name="RegisterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_15dp</item>
        <item name="android:background">@drawable/shape_rounded_white_rectangle</item>
        <item name="android:paddingEnd">@dimen/space_15dp</item>
        <item name="android:paddingLeft">@dimen/space_15dp</item>
        <item name="android:paddingRight">@dimen/space_15dp</item>
        <item name="android:paddingStart">@dimen/space_15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- buttons -->

    <style name="ButtonBase" parent="@style/Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/space_12dp</item>
        <item name="android:paddingRight">@dimen/space_12dp</item>
        <item name="android:paddingStart">@dimen/space_12dp</item>
        <item name="android:paddingEnd">@dimen/space_12dp</item>
    </style>

    <!--button style-->
    <style name="ButtonTextRaised" parent="@style/ButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="gazelle_button" parent="ButtonTextRaised">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttonHeightDefault</item>
        <item name="android:background">@drawable/raised_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle" parent="gazelle_button">
        <item name="android:textColor">@drawable/text_color_white_button_selector</item>
    </style>

</resources>
